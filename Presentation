\section{Morfometria}


\begin{frame}{Caracteristicas morfometricas de la cuenca}
    \begin{columns}
        \column{0.5\textwidth}
        \centering
        \includegraphics[width=1\textwidth]{Sumapaz.ltx/red.hidrica.jpg}
  
         
        \column{0.5\textwidth}
     \begin{itemize}
    \item Area y Forma: $3042 km^2$, Oval-Rectangular oblonga
    \item Elevacion: $280-4400 msnm$
    \item Pendientes: $16, 8, 3 $ respectivamente, Cuenca, Red, Cauce principal
    \item Tiempo de concentracion: $12 horas$
    \item Red de drenaje: $1.39 km^{-1}$
      \end{itemize}
      
    \end{columns} 
\end{frame}


